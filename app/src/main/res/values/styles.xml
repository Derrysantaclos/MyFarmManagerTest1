<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="user_input">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
    <style name="input_container">
        <item name="backgroundColor">#fff</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">40dp</item>
        <item name="android:elevation">5dp</item>
    </style>
    <style name="auth_btn">
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:padding">0dp</item>
    </style>
    <style name="auth_btn.half_btn">
        <item name="android:layout_width">90dp</item>
        <item name="android:inset">0dp</item>

    </style>
</resources>